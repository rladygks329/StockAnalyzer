# ============================================================
# AI Provider API 키
# ============================================================
# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- OpenAI (GPT) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Google (Gemini) ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- xAI (Grok) ---
GROK_API_KEY=your_grok_api_key_here

# ============================================================
# Step별 AI 프로바이더 설정
# ============================================================
# 각 Step에서 사용할 프로바이더: claude | gpt | gemini | grok
# 미설정 시 AI_PROVIDER 값을 사용 (글로벌 기본값)

# 글로벌 기본 프로바이더
AI_PROVIDER=claude

# Step 1: 거래량/거래대금 필터링 및 데이터 정리
STEP1_PROVIDER=claude
# Step 2: 재무지표 분석 (PER/PBR/EPS/ROE)
STEP2_PROVIDER=claude
# Step 3: 뉴스 감성 분석
STEP3_PROVIDER=claude
# Step 4: 시장 동향 종합 분석
STEP4_PROVIDER=claude
# Step 5: 최종 리포트 생성
STEP5_PROVIDER=claude

# ============================================================
# 프로바이더별 모델 설정
# ============================================================

# Claude 모델
CLAUDE_MODEL_DATA=claude-sonnet-4-20250514
CLAUDE_MODEL_ANALYSIS=claude-sonnet-4-20250514

# GPT 모델
GPT_MODEL_DATA=gpt-4o
GPT_MODEL_ANALYSIS=gpt-4o

# Gemini 모델
GEMINI_MODEL_DATA=gemini-2.0-flash
GEMINI_MODEL_ANALYSIS=gemini-2.0-flash

# Grok 모델
GROK_MODEL_DATA=grok-3
GROK_MODEL_ANALYSIS=grok-3

# ============================================================
# AI 모델 temperature 설정
# 작은값 (< 0.5): 보수적, 사실기반
# 기본값 (0.5~1.0): 중립
# 큰값 (> 1.0): 과장, 예측기반
# ============================================================
TEMPERATURE_DATA=0.1 # 데이터 분석
TEMPERATURE_ANALYSIS=0.4 # 분석 결과

# ============================================================
# 외부 API 키
# ============================================================
# Naver Search API (https://developers.naver.com)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# OpenDart API Key (https://opendart.fss.or.kr)
DART_API_KEY=your_dart_api_key_here

# ============================================================
# 분석 설정
# ============================================================
VOLUME_THRESHOLD=10000000 #거래량
TRADING_VALUE_THRESHOLD=10000000000 #거래대금

# ============================================================
# 사용 예시
# ============================================================
# 모든 Step을 Claude로:
#   AI_PROVIDER=claude
#
# Step 1~3은 Gemini(저비용), Step 4~5는 Claude(고품질):
#   AI_PROVIDER=claude
#   STEP1_PROVIDER=gemini
#   STEP2_PROVIDER=gemini
#   STEP3_PROVIDER=gemini
#   STEP4_PROVIDER=claude
#   STEP5_PROVIDER=claude
#
# 각 Step마다 다른 프로바이더:
#   STEP1_PROVIDER=gemini
#   STEP2_PROVIDER=gpt
#   STEP3_PROVIDER=grok
#   STEP4_PROVIDER=claude
#   STEP5_PROVIDER=claude
