# ============================================================
# AI Provider API 키
# ============================================================
# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- OpenAI (GPT) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Google (Gemini) ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- xAI (Grok) ---
GROK_API_KEY=your_grok_api_key_here

# ============================================================
# AI 프로바이더 설정
# ============================================================
# 글로벌 기본 프로바이더
AI_PROVIDER=claude

# Step 4: 종합분석 (뉴스 감성분석 + 시장 동향)
STEP4_PROVIDER=claude
# Step 5: 최종 리포트 생성
STEP5_PROVIDER=claude

# ============================================================
# 프로바이더별 모델 설정
# ============================================================

# Claude 모델
CLAUDE_MODEL_DATA=claude-sonnet-4-20250514
CLAUDE_MODEL_ANALYSIS=claude-sonnet-4-20250514

# GPT 모델
GPT_MODEL_DATA=gpt-4o
GPT_MODEL_ANALYSIS=gpt-4o

# Gemini 모델
GEMINI_MODEL_DATA=gemini-2.0-flash
GEMINI_MODEL_ANALYSIS=gemini-2.0-flash

# Grok 모델
GROK_MODEL_DATA=grok-3
GROK_MODEL_ANALYSIS=grok-3

# ============================================================
# AI 모델 temperature 설정
# ============================================================
TEMPERATURE_DATA=0.1
TEMPERATURE_ANALYSIS=0.4

# ============================================================
# 외부 API 키
# ============================================================
# Naver Search API (https://developers.naver.com)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# OpenDart API Key (https://opendart.fss.or.kr)
DART_API_KEY=your_dart_api_key_here

# ============================================================
# 분석 설정
# ============================================================
VOLUME_THRESHOLD=10000000
TRADING_VALUE_THRESHOLD=10000000000

# ============================================================
# 프롬프트 출력 및 API 호출 제어
# ============================================================
# Step 4/5 프롬프트를 콘솔에 출력할지 여부 (기본: false)
SHOW_STEP_PROMPTS=false

# API 호출 여부 (기본: true, false면 프롬프트만 저장)
ANALYZE_BY_API=true

# ============================================================
# 사용 예시
# ============================================================
# Phase 1만 (데이터 수집, API 불필요):
#   python main.py --step collect --date 20260213
#
# 저장된 데이터에서 프롬프트만 생성 (API 불필요):
#   python main.py --step analyze --from-data outputs/reports/data_2026-02-13_collected.json --prompt-only
#
# 전체 파이프라인:
#   python main.py --date 20260213
#
# Step별 프로바이더 지정:
#   python main.py --step4 gemini --step5 claude
